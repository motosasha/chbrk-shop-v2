//- Все примеси в этом файле должны начинаться c имени блока (nav)
//- Упоминание имени блока в классах обязательно, без этого он не попадёт
//- в сборку

mixin nav(data, mods)

  //- Принимает:
  //-   data    {object} - данные
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +nav("Текст", "some-mod")

  //- список модификаторов
  -
    var allMods = "";
    if (typeof (mods) !== "undefined" && mods) {
      var modsList = mods.split(",");
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + " nav--" + modsList[i].trim();
      }
    }

  nav.nav(class=allMods)&attributes(attributes)
    ul.nav__inner
      each item in data
        if !item.isAuth || item.isAuth === isAuthorisation
          li.nav__item
            a.nav__link(href= item.href + ".html", target= item.window === "new"? "_black": false)!= item.title
